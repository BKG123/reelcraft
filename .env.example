# ============================================
# REELCRAFT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual API keys
# DO NOT commit the .env file to version control
# ============================================

# ============================================
# REQUIRED API KEYS
# ============================================

# Google Gemini API Key
# Used for: Script generation (LLM) and Text-to-Speech (TTS)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Pexels API Key
# Used for: Downloading stock images and videos
# Get your key at: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# FireCrawl API Key
# Used for: Extracting article content from URLs
# Get your key at: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ============================================
# OPTIONAL - MONITORING & ANALYTICS
# ============================================

# Langfuse Configuration
# Used for: Tracking LLM calls, token usage, and performance monitoring
# Get your keys at: https://langfuse.com/
# Leave blank to disable Langfuse integration
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# OPTIONAL - CLOUD STORAGE (Cloudflare R2)
# ============================================

# Enable cloud storage for videos (saves local disk space + CDN delivery)
# Set to "true" to enable, "false" or leave blank to store locally
R2_ENABLED=false

# Cloudflare R2 Configuration
# Get your credentials at: https://dash.cloudflare.com/ → R2 → Manage R2 API Tokens
# Leave blank if R2_ENABLED=false
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=reelcraft-videos
R2_PUBLIC_URL=https://videos.yourdomain.com  # Your custom domain or R2.dev URL

# ============================================
# OPTIONAL - ADVANCED SETTINGS
# ============================================

# Uncomment and modify these if you need custom settings

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Maximum concurrent audio generation requests (avoid rate limits)
# AUDIO_GENERATION_MAX_CONCURRENT=3

# Default video quality for Pexels downloads (hd, sd)
# DEFAULT_VIDEO_QUALITY=hd

# Default image/video orientation (portrait, landscape, square)
# DEFAULT_ORIENTATION=portrait
